<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/grad_bg"
    android:orientation="vertical"
    tools:context=".SignUpScreen">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="SignUp"
        android:textColor="#201111"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="ACCOUNT"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edAccount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"
                android:hint="Username"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tvgmail"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="FULL NAME"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edGmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_bg"
                android:hint="Fullname"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tvpassword"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="GMAIL"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edFassWord"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_bg"
                android:hint="admin@gmail.com"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tvRenewPassWord"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="PASSWORD"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edRenewPassWord"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_bg"
                android:hint="PassWord"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tvfullname"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="RENEW PASSWORD"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edFullName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_bg"
                android:hint="Renew Password"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:text="" />
        </LinearLayout>

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btnSignUp"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:text="SignUp" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="300dp"
            android:id="@+id/back"
            android:layout_width="100dp"
            android:background="@drawable/grad_bg"
            android:layout_height="40dp"
            android:text="Back" />

    </LinearLayout>
</LinearLayout>
